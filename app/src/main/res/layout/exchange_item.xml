<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/currencyToTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USD"
        android:textSize="32sp"
        android:textColor="@color/colorText"
        tools:layout_editor_absoluteY="0dp"
        app:layout_constraintLeft_toRightOf="@+id/currencyFromTextView"
        android:layout_marginLeft="40dp" />

    <TextView
        android:id="@+id/currencyFromTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RUB"
        android:textSize="32sp"
        android:textColor="@color/colorText"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/amountToTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="20"
        android:textColor="@color/colorText"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/currencyToTextView"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/currencyToTextView"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/currencyToTextView" />

    <TextView
        android:id="@+id/amountFromTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="1200"
        android:textColor="@color/colorText"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/currencyFromTextView"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/currencyFromTextView"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/currencyFromTextView" />

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/colorText"
        android:text="10.11.2017"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toRightOf="@+id/currencyToTextView"
        android:layout_marginLeft="8dp" />

</android.support.constraint.ConstraintLayout>